# Configuración de Base de Datos
# Cambia DATABASE_TYPE según la base de datos que quieras usar:
# - postgresql (recomendado)
# - supabase
# - mongodb
# - mysql
# - sqlite

DATABASE_TYPE=postgresql

# ===== CONFIGURACIÓN POSTGRESQL (Recomendado) =====
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=portfolio
POSTGRES_USERNAME=tu_usuario
POSTGRES_PASSWORD=tu_contraseña
POSTGRES_SSL=false
# O usar connection string completo:
# POSTGRES_CONNECTION_STRING=postgresql://usuario:contraseña@host:puerto/base_de_datos

# ===== CONFIGURACIÓN SUPABASE (PostgreSQL con extras) =====
# NEXT_PUBLIC_SUPABASE_URL=tu_url_de_supabase
# NEXT_PUBLIC_SUPABASE_ANON_KEY=tu_clave_anonima

# ===== CONFIGURACIÓN MONGODB =====
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_DATABASE=portfolio
# MONGODB_USERNAME=tu_usuario
# MONGODB_PASSWORD=tu_contraseña

# ===== CONFIGURACIÓN MYSQL =====
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=portfolio
# MYSQL_USERNAME=tu_usuario
# MYSQL_PASSWORD=tu_contraseña

# ===== CONFIGURACIÓN SQLITE =====
# SQLITE_DATABASE=./database.sqlite

# ===== OTRAS CONFIGURACIONES =====
NEXTAUTH_SECRET=tu_secreto_de_nextauth
NEXTAUTH_URL=http://localhost:3000 